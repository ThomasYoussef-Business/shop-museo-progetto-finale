@{
    Layout = "_Layout";
}

@section links {
        <link rel="stylesheet" href="~/css/Index.css" />
}

<div class="header-main-bar">
    <div class="logo-search-container">
        @*logo*@
        <div class="logo cols-xs-12 cols-md-4">
            <a class="navbar-logo">
                <img class="logo-img" src="~/lib/img/elephant-logo-element-line-art-animal-illustration-vector_53876-151363.webp" alt="MuseumLogo"/>
            </a>
        </div>
        <div class="welcome-title"></div>
        <div class="cols-xs-12 col-sm-9 col-md-4" id="search">
            
                <form>
                    <input type="text" class="" value placeholder="Find your product..."/>
                </form>
            
        </div>

    </div>

@*-----------------------------------*@
</div>
@*-------------------------Finito Header----------------------------*@
<div class="slide-pictures-container">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="https://cdn.pixabay.com/photo/2014/08/17/16/33/notebook-420011_960_720.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://cdn.pixabay.com/photo/2019/04/28/15/13/pen-4163403_960_720.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://www.lastilograficamilano.it/image/cache/wp/gj/importazione/p/1340-1782-900x450.webp" alt="Third slide">
            </div>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>

