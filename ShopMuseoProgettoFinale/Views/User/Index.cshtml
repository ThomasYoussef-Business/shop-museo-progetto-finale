@{
    Layout = "_Layout";
}

@section links {
    <link rel="stylesheet" href="~/css/Index.css" />
}

@section SearchBar{
    <form class="d-flex" role="search">
        <input id="search" class="form-control me-2 rounded-0" type="search" placeholder="Search" aria-label="Search">
    </form>
}

<div class="container-fluid mb-5">
    <div class="row d-flex justify-content-between">
        <div class="col-12 col-sm-2 p-1">
            <img class="logo-img img-fluid object-fit-cover" src="~/lib/img/elephant-logo-element-line-art-animal-illustration-vector_53876-151363.webp" alt="MuseumLogo" />
        </div>
        <div class="col-12 col-sm-8 text-center d-flex flex-column justify-content-center align-items-center">
            <h1 class="display-1">Museum Shop</h1>
        </div>
        <div class="col-2">
            <span class="invisible">lorem</span>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row d-flex justify-content-center">
        <div class="col-10 col-md-8">
            <div class="row g-2">
                <div class="col-12 p-0">
                    <div id="museumCarousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner object-fit-cover">
                            <div class="carousel-item active">
                                <img class="d-block w-100 object-fit-cover" style="height: 30vw" src="https://cdn.britannica.com/33/130833-050-462F8F09/Wheatfield-Crows-oil-canvas-Vincent-van-Gogh-1890.jpg" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100 object-fit-cover" style="height: 30vw" src="https://www.artyfactory.com/art_appreciation/great-artists/vincent-van-gogh/images/van-gogh-chateau-at-auvers-at-sunset-1890.jpg" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100 object-fit-cover" style="height: 30vw" src="https://design215.com/images/gallery/old_book_850x315.jpg" alt="Third slide">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#museumCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#museumCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
                <div class="col-12 col-md-6 p-0 pe-md-1 d-flex align-items-stretch">
                    <img class="d-block w-100 ratio object-fit-cover" style="--bs-aspect-ratio: 50%;" src="https://tandsgo.com/wp-content/uploads/2020/09/Facebook-cover-photo-pen-and-notebook-on-desk-680x259.jpg" alt="Second slide">
                </div>
                <div class="col-12 col-md-6 p-0 ps-md-1 d-flex align-items-stretch">
                    <img class="d-block w-100 ratio object-fit-cover" style="--bs-aspect-ratio: 50%;" src="https://dealnews.in/wp-content/uploads/2020/12/Copy-of-Purple-Smartphone-Modern-Elegance-Technology-Gaming-Facebook-Shops-Cover-10.jpg">
                </div>
            </div>
        </div>
    </div>
</div>

<h3 class="text-center">Discover Our Products</h3>
<div class="container-fluid">
    <div class="row d-flex justify-content-center">
        <div class="col-12 col-md-9">
            <div id="productsDiv" class="row g-5">

                <div id="loadingCard" class="col-12 col-sm-6 col-md-4 col-lg-3 p-2">
                    <div class="card h-100 border border-0">
                        <div class="ratio ratio-4x3">
                            <div class="card-img-top rounded-0 bg-primary"></div>
                        </div>
                        <div class="card-body d-flex flex-column align-items-center text-center">
                            <h5 class="card-title placeholder-glow w-100">
                                <span class="placeholder col-6">&nbsp;</span>
                            </h5>
                            <p class="card-text lead fs-6 placeholder-glow w-100">
                                <span class="col-12 placeholder"></span>
                                <span class="col-10 placeholder"></span>
                                <span class="col-11 placeholder"></span>
                            </p>
                            <p class="card-text placeholder-glow mt-auto w-100">
                                <span class="placeholder col-3"></span>
                            </p>
                            <div class="d-flex justify-content-center gap-1">
                                <a tabindex="-1" class="btn btn-outline-dark disabled rounded-0" href="#">Dettagli</a>
                                <a tabindex="-1" class="btn btn-outline-dark disabled rounded-0" href="#">Buy</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div id="noProductsCard" class="col-12 col-sm-6 col-md-4 col-lg-3 p-2">
                    <div class="card h-100 border border-0">
                        <div class="ratio ratio-4x3">
                            <img src="https://via.placeholder.com/500/0d6efd/?text=%3A%28" class="card-img-top rounded-0">
                        </div>
                        <div class="card-body d-flex flex-column align-items-center text-center">
                            <h5 class="card-title lead">No products were found</h5>
                            <p class="card-text lead fs-6">We're sorry for the inconvenience!</p>
                            <p class="card-text mt-auto">We advise to contact a website administrator.</p>
                            <div class="d-flex justify-content-center gap-1">
                                <a class="btn disabled btn-outline-dark rounded-0" href="/User/Details/${product.id}">Dettagli</a>
                                <a class="btn disabled btn-outline-dark rounded-0" href="/User/Buy/">Buy</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script type="text/javascript">

    </script>
}